<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Description</key>
    <string>Packages the latest version of Mozilla Thunderbird.</string>
    <key>Identifier</key>
    <string>com.github.hitachivantara.pkg.mozillathunderbird</string>
    <key>Input</key>
    <dict>
       <key>NAME</key>
       <string>Mozilla Thunderbird</string>
    </dict>
    <key>ParentRecipe</key>
    <string>com.github.hitachivantara.download.mozillathunderbird</string>
    <key>MinimumVersion</key>
    <string>1.4.0</string>
    <key>Process</key>
    <array>
        <dict>
            <key>Processor</key>
            <string>AppPkgCreator</string>
            <key>Arguments</key>
            <dict>
                <key>pkg_path</key>
                <string>%RECIPE_CACHE_DIR%/%NAME%-%version%.pkg</string>
                <key>app_path</key>
                <string>%pathname%/Thunderbird.app</string>
            </dict>
        </dict>
    </array>
</dict>
</plist>
